@model UnhandledExceptionProject.Models.Rental

@{
    ViewBag.Title = "Edit";
    Html.RenderPartial("_Header");
}

<div class="container">
     @{
        Html.RenderPartial("_Browse");
     }
 @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
     @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.rental_ID)
     
      <div class="col-md-9">
        <div class="browse">
                <div class="index">
                <table class="index">
                    <tr>
                        <td class="index" colspan="5">Edit Rental: @Html.DisplayFor(model => model.rental_ID)</td>
                    </tr>
                    <tr>
                        <td class="indexlabel">Prop</td>
                        <td class="indexinfo"><select id="prop_ID" name="prop_ID">

    @foreach (var choice in ViewBag.PropList)
    {
        <option value="@choice">@choice</option>
    }
</select>

                                                @Html.ValidationMessageFor(model => model.prop_ID)</td>
                        <td class="indexlabel">Garment/td>
                        <td class="indexinfo"><select id="garment_ID" name="garment_ID">

    @foreach (var choice in ViewBag.GarmentList)
    {
        <option value="@choice">@choice</option>
    }
</select>

                                                @Html.ValidationMessageFor(model => model.garment_ID)</td>
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.date_taken)</td>
                        <td class="indexinfo">@Html.EditorFor(model => model.date_taken)
                                                @Html.ValidationMessageFor(model => model.date_taken)</td>
                        <td class="indexlabel">@Html.LabelFor(model => model.date_returned)</td>
                        <td class="indexinfo">@Html.EditorFor(model => model.date_returned)
                                                @Html.ValidationMessageFor(model => model.date_returned)</td>
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.cond_returned)</td>
                        <td class="indexinfo">@Html.EditorFor(model => model.cond_returned)
                                                @Html.ValidationMessageFor(model => model.cond_returned)</td>
                        <td class="indexlabel"></td>
                        <td class="indexinfo"></td>
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.cost)</td>
                        <td class="indexinfo">@Html.EditorFor(model => model.cost)
                                                @Html.ValidationMessageFor(model => model.cost)</td>
                        <td class="indexlabel">@Html.LabelFor(model => model.in_out)</td>
                        <td class="indexinfo">@Html.EditorFor(model => model.in_out)
                                                @Html.ValidationMessageFor(model => model.in_out)</td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" class="button" value="Save" /></td>
                    </tr>
            </table>
            </div>
          </div>
      </div>
 }
    </div>

@{
    Html.RenderPartial("_Footer");
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}