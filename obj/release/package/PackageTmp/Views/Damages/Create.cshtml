@model UnhandledExceptionProject.Models.Damage

@{
    ViewBag.Title = "Create";
    Html.RenderPartial("_Header");
}

<div class="container">
     @{
        Html.RenderPartial("_Browse");
     }
 @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
     @Html.AntiForgeryToken()
     
      <div class="col-md-9">
        <div class="browse">
                <div class="index">
                <table class="index">
                    <tr>
                        <td class="index" colspan="5">Add Damage</td>
                    </tr>
                    <tr>
                        <td class="indexlabel">Prop</td>
                        <td class="indexinfo"><select id="prop_ID" name="prop_ID">

    @foreach (var choice in ViewBag.PropList)
    {
        <option value="@choice">@choice</option>
    }
</select>

                                                @Html.ValidationMessageFor(model => model.prop_ID)</td>
                        <td class="indexlabel"></td>
                        <td class="indexinfo"></td>
                    </tr>
                    <tr>
                        <td class="indexlabel">Garment</td>
                        <td class="indexinfo"><select id="garment_ID" name="garment_ID">

    @foreach (var choice in ViewBag.GarmentList)
    {
        <option value="@choice">@choice</option>
    }
</select>

                                                @Html.ValidationMessageFor(model => model.garment_ID)</td>
                        <td class="indexlabel"></td>
                        <td class="indexinfo"></td>
                        
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.date_damaged)</td>
                        <td class="indexinfo"> @Html.EditorFor(model => model.date_damaged)
                                                 @Html.ValidationMessageFor(model => model.date_damaged)
                    </td>
                        <td class="indexlabel"></td>
                        <td class="indexinfo"></td>
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.exp_repair_date)</td>
                        <td class="indexinfo"> @Html.EditorFor(model => model.exp_repair_date)
                                                @Html.ValidationMessageFor(model => model.exp_repair_date)
                        </td>
                        <td class="indexlabel">@Html.LabelFor(model => model.repaired_date)</td>
                        <td class="indexinfo"> @Html.EditorFor(model => model.repaired_date)
                                                @Html.ValidationMessageFor(model => model.repaired_date)
                    </tr>
                    <tr>
                        <td class="indexlabel">@Html.LabelFor(model => model.repair_desc)</td>
                        <td class="indexinfo"> @Html.EditorFor(model => model.repair_desc)
                                                @Html.ValidationMessageFor(model => model.repair_desc)  
                        </td>
                        <td class="indexlabel"></td>
                        <td class="indexinfo"></td>
                    </tr>
                   

                    <tr>
                        <td colspan="2"><input type="submit" class="button" value="Save" /></td>
                    </tr>
            </table>
            </div>
          </div>
      </div>
 }
    </div>

@{
    Html.RenderPartial("_Footer");
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}