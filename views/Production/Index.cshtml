@model IEnumerable<UnhandledExceptionProject.Models.Production>

@{
    ViewBag.Title = "ShowBusiness: Browse";
    Html.RenderPartial("_Header");
}

<div class="container">
    @{
        Html.RenderPartial("_Browse");
    }
    <div class="col-md-9">
        <div class="browse">
            @foreach (var item in Model)
            {
                <div class="index">
                    <table class="index">
                        <tr>
                            <td class="index" colspan="5">Production: @Html.DisplayFor(modelItem => item.name)</td>
                        </tr>
                        <tr>
                            <td class="indexlabel">@Html.DisplayNameFor(model => model.name)</td>
                            <td class="indexinfo">@Html.DisplayFor(modelItem => item.name)</td>
                        </tr>
                        <tr>
                            <td class="indexlabel">@Html.DisplayNameFor(model => model.start_date)</td>
                            <td class="indexinfo">@Html.DisplayFor(modelItem => item.start_date)</td>
                        </tr>
                        <tr>
                            <td class="indexlabel">@Html.DisplayNameFor(model => model.end_date)</td>
                            <td class="indexinfo">@Html.DisplayFor(modelItem => item.end_date)</td>
                        </tr>
                        
                        <tr></tr>
                        <tr>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.production_ID }) |
                                @Html.ActionLink("Delete", "Delete", "Production", new { id = item.production_ID }, new { @class = "delete" })
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
</div>

@{
    Html.RenderPartial("_Footer");
}

